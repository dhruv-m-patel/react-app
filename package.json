{
  "name": "react-ssr-app",
  "version": "1.0.0",
  "description": "React app with SSR support using express and webpack v4",
  "main": "index.js",
  "scripts": {
    "build": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "start": "npm run clean && npm run build && node ./dist/server/start.js",
    "start:dev": "babel-node ./src/server/start.js",
    "start:watch": "npm run clean && npm run build && nodemon"
  },
  "keywords": [
    "react",
    "ssr",
    "express",
    "webpack4"
  ],
  "author": "Dhruv Patel",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "bluebird": "^3.5.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-enrouten": "^1.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "nodemon": "^1.19.1",
    "rimraf": "^3.0.0"
  }
}
